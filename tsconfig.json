  "compilerOptions": {
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "target": "es6"
  },
  "include": [
    "src",
    "typings"
  ],
  "exclude": [
    "build",
    "node_modules"
  ]
}
